{
    "intents": [
        {
            "name": "control_lights",
            "category": "room_iot",
            "description": "Illumination  control in the room",
            "examples": [
                "Enciende la luz",
                "Prende la luz", 
                "Apaga la luz", 
                "Sube la luz", 
                "Baja la luz"
            ],
            "parameters": {
                "state": {
                    "type": "string",
                    "values": ["ON", "OFF"]
                },
                "brightness":{
                    "type": "integer", 
                    "min": 0, 
                    "max": 100
                }
            },
            "action": "adjust_lights"
        },

        {
            "name": "control_curtains", 
            "description": "Opens or closes curtains",
            "category": "room_iot",
            "examples": [
                "Abre las cortinas",
                "Cierra las cortinas"
            ],
            "parameters":{
                "state":{
                    "type": "string",
                    "values": ["CLOSED", "OPENED"]
                }
            },
            "action": "adjust_curtains"
        },

        {
            "name": "control_AC",
            "category": "room_iot",
            "description": "Temperature control in the room",
            "examples": [
                "Subela temperatura",
                "Baja la temperatura", 
                "Prende el aire", 
                "Apaga el aire"
            ],
            "parameters": {
                "state": {
                    "type": "string", 
                    "values": ["ON", "OFF"]
                }, 
                "temperature": {
                    "type": "integer",
                    "min": 21, 
                    "max": 24
                }
            },
            "action": "adjust_temp"
        },

        {
            "name": "control_tv", 
            "category": "room_iot",
            "description": "Turns the TV on/ off",
            "examples": [
                "Ṕrende la tele", 
                "Apaga la tele", 
                "Ṕrende la TV", 
                "Apaga la TV", 
                "Ṕrende la television", 
                "Apaga la television"
            ],
            "parameters": {
                "state":{
                    "type": "string",
                    "values": ["ON", "OFF"]
                }
            },
            "action": "on_off_tv"
        },

        {
            "name": "change_channel", 
            "category": "room_iot",
            "description": "Change TV channel", 
            "examples": [
                "Cambia al canal {channel}", 
                "Cambia a canal {channel}", 
                "Pon el canal {channel}", 
                "Quiero ver {channel}"
            ],
            "parameters":{
                "channel":{
                    "type": "integer", 
                    "required": true, 
                    "elicitation_prompt": "¿A qué canal quieres cambiar? "
                }
            },
            "action": "channel_changed"
        },

        {
            "name": "adjust_volume", 
            "category": "room_iot",
            "description": "Ajust TV volume", 
            "examples": [
                "Baja el volumen",
                "Sube el volumen", 
                "Mute TV", 
                "Silencia la TV"
            ],
            "parameters":{
                "volume":{
                    "type": "string", 
                    "values": ["UP", "DOWN", "MUTE"],
                    "required": true
                }
            },
            "action": "volume_changed"
        }
    ]

}



